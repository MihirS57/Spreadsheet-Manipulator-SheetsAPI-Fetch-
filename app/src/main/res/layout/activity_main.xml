<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/disp_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="138dp"
        android:layout_toEndOf="@+id/disp_data"
        android:text="Results"
        android:textColor="@color/teal_700"
        android:textIsSelectable="true"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/disp_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="138dp"
        android:text="Your data will appear here"
        android:textColor="@color/teal_700"
        android:textSize="16sp" />

    <Button
        android:id="@+id/fetch_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disp_result"
        android:layout_alignStart="@+id/disp_result"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="86dp"
        android:text="Account" />

</RelativeLayout>